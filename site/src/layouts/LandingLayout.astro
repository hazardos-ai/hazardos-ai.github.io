---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

import { headerData } from '~/navigation';
import { FORMBRICKS } from 'astrowind:config';
import type { MetaData } from '~/types';


import formbricks from "@formbricks/js";

if (typeof window !== "undefined" && FORMBRICKS.environmentId) {
  formbricks.setup({
    environmentId: FORMBRICKS.environmentId, 
    appUrl: FORMBRICKS.debug ? `${FORMBRICKS.appUrl}?formbricksDebug=true` : FORMBRICKS.appUrl,
  });
}

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
---

<PageLayout metadata={metadata}>
  <Fragment slot="announcement">
    <slot name="announcement" />
  </Fragment>
  <Fragment slot="header">
    <slot name="header">
      <Header
        links={undefined}
        actions={[
          // {
          //   text: 'Download',
          //   href: 'https://github.com/onwidget/astrowind',
          // },
        ]}
        showToggleTheme
        position="right"
      />
    </slot>
  </Fragment>
  <slot />
</PageLayout>
