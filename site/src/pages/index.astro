---
import Layout from '~/layouts/LandingLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const logo = '~/assets/images/hazardos-logo.png';

const metadata = {
  title: 'hazardOS pre-launch',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Coming Soon ..."
    title="Your Smart Hazard Analyst for the Modern World"
    subtitle="AI-powered EHS: hazard detection, safety program automation, and real-time compliance."
    actions={[
      { variant: 'primary', text: 'Get an early invitation', href: '#', icon: 'tabler:square-rounded-arrow-right' }
    ]}
    image={{
      src: logo,
      alt: 'hazardOS logo featuring a white geometric hexagonal design with the letter "H" integrated into an isometric cube structure on a blue-to-purple gradient background',
    }}
  />
</Layout>
